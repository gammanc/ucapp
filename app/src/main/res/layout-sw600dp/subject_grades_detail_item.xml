<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/horizontal_text_margin"
            android:paddingBottom="@dimen/item_padding_y"
            android:paddingLeft="16dp"
            android:paddingTop="@dimen/item_padding_y">

            <TextView
                android:id="@+id/txt_evaluation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Subject"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <TextView
                android:id="@+id/txt_date_and_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="8/05/18 - (15%)"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_grade"
                    android:layout_width="64dp"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rectangular_shape"
                    android:backgroundTint="#00e676"
                    android:gravity="center"
                    android:text="N/A"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    tools:layout_marginRight="16dp" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedfe0" />
</LinearLayout>
