<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat">

    <LinearLayout
        android:id="@+id/total_grade_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="#00b0ff"
        android:visibility="visible"
        android:paddingBottom="@dimen/item_padding_y">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:paddingTop="@dimen/item_padding_y"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/txt_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textColor="#fff"
                android:text="Redes de Computadoras"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textStyle="normal" />

        </LinearLayout>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_grade"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_shape"
            app:backgroundTint="#fff"
            android:gravity="center"
            android:text="7.8"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:textColor="#fff"
            android:text="@string/total_grade"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="normal" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
</LinearLayout>