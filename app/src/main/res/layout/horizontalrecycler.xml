<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/item_padding_x"
        android:layout_marginLeft="@dimen/item_padding_x"
        android:layout_alignBaseline="@id/section_button"
        android:textSize="@dimen/item_title"
        android:text="Section 1" />
    <Button
        android:id="@+id/section_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/item_padding_x"
        android:layout_marginLeft="@dimen/item_padding_x"
        android:text="See more"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/section_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/section_button"/>
</RelativeLayout>