<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:gravity="bottom"
    android:orientation="vertical"

    android:theme="@style/ThemeOverlay.AppCompat">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_background"
            android:contentDescription="Drawer background"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="16dp">
            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true">
            </ImageView>
            <TextView
                android:id="@+id/txt_carnet"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="00215316"
                android:layout_below="@id/img_profile"
                android:layout_centerHorizontal="true"
                android:textStyle="normal"
                android:paddingTop="8dp" />
            <TextView
                android:id="@+id/txt_name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Emerson Gamaliel Nolasco Cornejo"
                android:layout_below="@id/txt_carnet"
                android:layout_centerHorizontal="true"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_career"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Ingeniería Informática"
                android:layout_below="@id/txt_name"
                android:layout_centerHorizontal="true"
                android:textStyle="normal"/>
            <TextView
                android:id="@+id/txt_cum"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="CUM General : "
                android:layout_below="@id/txt_career"
                android:layout_centerHorizontal="true"
                android:textStyle="normal"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="4dp"
                app:srcCompat="@drawable/ic_settings"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp" />
        </RelativeLayout>


</FrameLayout>
